{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "skipLibCheck": true,
    "types": ["react", "react-native", "expo"]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
  "include": ["App.tsx", "src"]
}
